@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find Boost dependencies if not already found
if(NOT TARGET Boost::json)
    find_dependency(Boost REQUIRED COMPONENTS json)
endif()

# Include the targets file
if(NOT TARGET Atlas::atlas)
    include("${CMAKE_CURRENT_LIST_DIR}/AtlasTargets.cmake")
endif()

# Set the executable location for downstream users
set(Atlas_EXECUTABLE "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_BINDIR@/atlas")

check_required_components(Atlas)