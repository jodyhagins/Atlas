# ======================================================================
# CONSTRAINT INTEGRATION TEST TYPES
# Consolidation of ALL constraint test type definitions (Tasks 2-8)
# ======================================================================

# ======================================================================
# TASK 2: POSITIVE CONSTRAINT
# Value must be > 0
# ======================================================================

[test::constraints::PositiveInt]
description=int; positive, <=>

[test::constraints::PositiveChecked]
description=std::uint8_t; positive, +, -, checked, #<cstdint>

[test::constraints::PositiveSaturating]
description=std::uint8_t; positive, +, -, saturating, #<cstdint>

[test::constraints::PositiveWrapping]
description=std::uint8_t; positive, +, -, wrapping, #<cstdint>

# ======================================================================
# TASK 3: NON-NEGATIVE CONSTRAINT
# Value must be >= 0
# ======================================================================

[test::constraints::NonNegativeInt]
description=int; non_negative, <=>, +, -

[test::constraints::NonNegativeChecked]
description=std::uint8_t; non_negative, +, -, checked, #<cstdint>

[test::constraints::NonNegativeSaturating]
description=std::uint8_t; non_negative, +, -, saturating, #<cstdint>

# ======================================================================
# TASK 4: NON-ZERO CONSTRAINT
# Value must be != 0
# ======================================================================

[test::constraints::NonZeroInt]
description=int; non_zero, <=>, +, -, *

[test::constraints::Denominator]
description=int; non_zero, *, /

[test::constraints::NonZeroUChar]
description=unsigned char; non_zero, *

# ======================================================================
# TASK 5: BOUNDED CONSTRAINT
# Value must be in closed range [Min, Max]
# ======================================================================

[test::constraints::Percentage]
description=int; bounded<0,100>, <=>

[test::constraints::Temperature]
description=double; bounded<-273.15,1e7>, +, -, *, /, c++20

[test::constraints::BoundedChecked]
description=std::uint8_t; bounded<0,100>, +, -, checked, #<cstdint>

[test::constraints::FortyTwo]
description=int; bounded<42,42>, ==

[test::constraints::BoundedString]
description=std::string; bounded<"A", "AAAA">, <=>, no-constexpr

# ======================================================================
# TASK 5.5: BOUNDED_RANGE CONSTRAINT
# Value must be in half-open range [Min, Max)
# ======================================================================

[test::constraints::HalfOpenPercentage]
description=int; bounded_range<0,100>, <=>

[test::constraints::CelsiusRange]
description=double; bounded_range<0.0,100.0>, +, -, *, /, c++20

[test::constraints::BoundedRangeChecked]
description=std::uint8_t; bounded_range<0,100>, +, -, checked, #<cstdint>

[test::constraints::TinyRange]
description=int; bounded_range<42,44>, ==

[test::constraints::NegativeRange]
description=int; bounded_range<-10,10>, +, -, <=>

[test::constraints::BoundedRangeString]
description=std::string; bounded_range<"A", "AAAA">, <=>, no-constexpr

# ======================================================================
# TASK 6: NON-EMPTY CONSTRAINT
# Container/string must not be empty
# ======================================================================

[test::constraints::Username]
description=std::string; non_empty, ==, !=, no-constexpr

[test::constraints::NonEmptyVector]
description=std::vector<int>; non_empty, ==, !=, #<vector>, no-constexpr
forward=size, empty, push_back, pop_back, clear

# ======================================================================
# TASK 7: NON-NULL CONSTRAINT
# Pointer/optional must not be null
# ======================================================================

[test::constraints::Handle]
description=void*; non_null, ==, !=

[test::constraints::DataPointer]
description=int*; non_null, ==, !=, ->

[test::constraints::SharedPointer]
description=std::shared_ptr<int>; non_null, no-constexpr, ==, !=, #<memory>, no-constexpr

[test::constraints::UniquePointer]
description=std::unique_ptr<int>; non_null, no-constexpr, ==, !=, #<memory>, no-constexpr

[test::constraints::Optional]
description=std::optional<int>; non_null, no-constexpr, ==, !=

